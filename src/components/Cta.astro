---
import CallToAction from "~/components/widgets/CallToAction.astro";
import { Picture } from "@astrojs/image/components";
import ClientSlider from "~/components/widgets/ClientSlider.tsx";
import Icon from "astro-icon";
import ProblemAstro from "../components/ProblemsCarousel";
---

<div class="w-full max-w-5xl p-4 mx-auto my-24">
  <div
    class="bg-primary w-full rounded-md shadow-xl overflow-hidden md:grid md:grid-cols-2 md:gap-4 lg:grid lg:grid-cols-2 lg:gap-4"
  >
    <div
      class="flex flex-col mb-4 text-white items-start pt-10 pb-12 px-6 sm:pt-16 sm:px-16 md:py-20 md:pr-0 lg:py-20 lg:pr-0 xl:px-20"
    >
      <h1 class="mb-4 info-title font-bold">
        <span class="block text-white">Worrying about cyber security?</span>
      </h1>
      <p class="text-sm md:text-base">
        We help businesses ranging from e-commerce to large IT companies focus
        on their core values, with better cyber security.
      </p>
      <div class="flex justify-cetner mt-8 gap-x-4 items-center">
        <a href="/learn-more" class="btn-white btn-sm">See Inside</a>
      </div>
    </div>
    <div class="w-full relative">
      <Picture
        style="box-shadow: 14px 8px 30px 0px #ffff;"
        class="translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 ltablet:translate-y-20 lg:translate-y-20"
        src="/images/android_blog.png"
        width={800}
        height={800}
        widths={[400, 768]}
        sizes="100vw, 432px"
        aspectRatio="300:300"
        alt="sa"
      />
    </div>
  </div>
</div>
