---
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Cta from "~/components/Cta.astro";
import Hero from "~/components/widgets/Hero.astro";
import { Picture } from "@astrojs/image/components";
import Icon from "astro-icon";
import ProblemAstro from "../components/ProblemsCarousel";
const meta = {
  title: "Do you want amplified security? ",
  description:
    "Defining boundaries for a quality security assement is hard. We make it easy.",
  dontUseTitleTemplate: true,
};
const reviews = [
  {
    title: `Explore the stories of how our clients were saved from cyber disasters.`,
    paragraph: "Case Studies",
    img_url: "/images/android_blog.png",
    href: "story-type/case-study",
  },
  {
    title: `See why our clients trust us to keep them future-ready for the next cyber attack.`,
    paragraph: "Client Win",
    img_url: "/images/android_blog.png",
    href: "story-type/client-wins",
  },
];
const resources = [
  {
    title: `What is social engeering awarness`,
    paragraph: "Resources",
    img_url: "/images/android_blog.png",
    href: "/resources/assesment-calculator",
  },
  {
    title: `How to protect your SMB?`,
    paragraph: "Resources",
    img_url: "/images/android_blog.png",
    href: "/resources/scope-paper",
  },
];
---

<Layout {meta}>
  <Hero
    callToAction={{ text: "Get started", href: "/learn-more" }}
    image={{
      src: import("~/assets/images/hero.jpg"),
      alt: "AstroWind Hero Image",
    }}
  >
    <Fragment slot="title">
      Your first step to
      <span class="text-accent highlight">outer world</span> security
    </Fragment>

    <Fragment slot="subtitle">
      <p class="max-w-lg">
        No matter the size of your company or how much security has been
        neglected in the past, we're able to help you.
      </p>
    </Fragment>
  </Hero>
  <!-- <ClientSlider /> -->

  <div class="w-full max-w-5xl px-4 py-8 mx-auto mb-24">
    <div class="h2 text-center w-full max-w-lg mx-auto">
      What our clients say about us
    </div>
    <div class="grid w-full mx-auto max-w-5xl grid-cols-1 md:grid-cols-2">
      {
        reviews.map((item: any, idx: number) => (
          <div class="w-96 my-16  col-span-1 md:mx-auto">
            <Picture
              class="w-full h-64 rounded-t-md"
              src={item.img_url}
              widths={[1600, 800]}
              sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
              aspectRatio="16:9"
              alt="sa"
            />
            <div class="rounded-b-md p-4 pb-8 flex flex-col gap-y-4 paper">
              <h1 class="h3 text-black" set:text={item.paragraph} />
              <p class="p2 mb-4 -mt-2" set:text={item.title} />

              <div class="w-full">
                <a href={item.href} class="btn-primary btn-md">
                  View more
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="w-full max-w-5xl px-4 py-8 mx-auto mb-24">
    <div class="h2 text-center w-full max-w-lg mx-auto mb-8">
      Do you have these security problems?
    </div>
    <ProblemAstro client:load />
  </div>
  <div class="h-full max-w-5xl mx-auto px-8 grid grid-cols-2">
    <div class="col-span-1 py-12 bg-blue-200"></div>
    <div class="col-span-1">
      <div class="text-left mb-8">
        <p class="text-primary p1 font-semibold">
          Fully Coded Components based in Astro
        </p>
        <h2 class="h2 my-4">Astro LaunchUI Pro</h2>
        <p class="p3">
          All the sections and pages made with these elements will be fully
          responsive and will look beautiful on all types of screens, including
          phones, tables, or desktops.
        </p>
      </div>
      <div class="lg:flex relative">
        <div class="p-2 lg:p-0 mb-8">
          <div class="grid gap-y-16 gap-x-8 grid-cols-2 md:grid-cols-2 mb-8">
            <div
              class="relative flex flex-col bg-clip-border rounded-xl bg-transparent text-gray-700 shadow-none"
            >
              <h1
                class="block antialiased tracking-normal font-semibold mb-4 text-5xl text-dark"
              >
                140+
              </h1><h5 class="p1 font-semibold">Coded Elements</h5><p
                class="block antialiased text-base font-light leading-relaxed text-gray-700"
              >
                From buttons, to inputs, navbars, alerts, tabels, cards or
                charts.
              </p>
            </div>
          </div>
          <a
            href="https://www.creative-tim.com/product/astro-launch-ui-pro"
            target="_blank"
            ><button class="btn-primary btn-md" type="button"
              >Meet the team</button
            ></a
          >
        </div>
      </div>
