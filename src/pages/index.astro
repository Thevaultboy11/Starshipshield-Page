  <div class="w-full max-w-5xl px-4 py-8 mx-auto mb-24">
    <div class="h2 w-full max-w-lg text-center mx-auto mb-8">
      Explore newest changes in the world of cyber security
    </div>
    {
      resources.map((item: any, idx: number) => (
        <div class="bg-paper w-full rounded-md grid grid-cols-1 md:grid-cols-3 mb-12">
          <div class="hidden md:block">
            <Picture
              class="w-full h-full  rounded-tl-md"
              src="/images/android_blog.png"
              widths={[1600, 800]}
              sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
              aspectRatio="3:2"
              alt="sa"
