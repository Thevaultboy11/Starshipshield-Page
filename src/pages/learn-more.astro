---
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import Cta from "~/components/Cta.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import Content from "~/components/widgets/Content.astro";
import LatestPosts from "~/components/blog/LatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import TestimonialCarousel from "../components/TestimonialCarousel";
import CtaCarousel from "../components/CtaCarousel";
const meta = {
  title: "Do you want amplified security? ",
  description:
    "Defining boundaries for a quality security assement is hard. We make it easy.",
  dontUseTitleTemplate: true,
};
const reviews = [
  {
    title: `Security Launchpad`,
    paragraph:
      "See why our clients trust us to keep them future-ready for the next cyber attack.",
    img_url: "/images/android_blog.png",
    href: "products/security-launchpad",
  },
  {
    title: `Webouncer`,
    paragraph:
      "See why our clients trust us to keep them future-ready for the next cyber attack.",
    img_url: "/images/android_blog.png",
    href: "/products/web-bouncer",
  },
  {
    title: `Ptaas`,
    paragraph:
      "See why our clients trust us to keep them future-ready for the next cyber attack.",
    img_url: "/images/android_blog.png",
    href: "/products/ptaas",
  },
];
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <div
    class="flex flex-col justify-center items-center text-center gap-y-8 max-w-5xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16"
  >
    <h1 class="max-w-2xl mb-4 h1">Do you want amplified security?</h1>
    <p class="max-w-2xl mb-6 p1">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem,
      laudantium.
    </p>
    <div class="w-full">
      <Picture
        class="h-96 w-100 rounded-md bg-gray-400 mx-auto"
        src={"/images/product11.svg"}
        widths={[1600, 800]}
        sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
        aspectRatio="16:9"
        alt="sa"
      />
    </div>
  </div>
  <div class="w-full max-w-5xl rounded-xl mx-auto px-4">
    <h1 class="h2 mb-4 mx-auto text-center">What clients say about us</h1>
    <CtaCarousel client:load />
  </div>
  <div class="w-ful bg-paper py-12 rounded-xl my-16">
    <div class="w-full px-8 mx-auto max-w-5xl">
      <h1 class="h2 mb-4 mx-auto text-left">Products we offer</h1>
      <div class="h-1 w-full rounded-full bg-black"></div>
    </div>
  </div>
  <div
    class="grid w-full mx-auto max-w-5xl p-4 gap-8 grid-cols-1 md:grid-cols-3 mb-20"
  >
    {
      reviews.map((item: any, idx: number) => (
        <div class=" col-span-1 md:mx-auto">
          <Picture
            class="w-full h-64 rounded-md"
            src={item.img_url}
            widths={[1600, 800]}
            sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
            aspectRatio="16:9"
            alt="sa"
          />
          <div class="py-4 flex flex-col gap-y-4 mb-auto">
            <h1 class="h3" set:text={item.title} />
            <p class="p1" set:text={item.paragraph} />

            <div class="w-full">
              <a href={item.href} class="font-bold p1 text-primary">
                View more
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
