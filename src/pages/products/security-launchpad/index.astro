---

<Layout {meta}>
  <div
    class="grid grid-cols-1 md:grid-cols-5 gap-x-8 max-w-5xl px-4 mx-auto lg:gap-4 lg:py-16 mb-24"
  >
    <div class="md:col-span-3">
      <h1 class="max-w-2xl mb-4 h1">
        Security Launchpad <span class="text-primary">Bundle</span>
      </h1>
      <p class="max-w-2xl mb-6 p1">
        Our bundle takes you from where you are now to where you can proudly say
        your security is A-excellent.
      </p>
      <a href="/contact-form/" class="w-full md:w-auto py-2 px-3 btn-primary"
        >Take first step</a
      >
    </div>
    <div class="w-full hidden md:block md:col-span-2 bg-red-200"></div>
  </div>

  <div class="mx-auto lg:max-w-5xl p-4 grid gap-x-8 grid-cols-12 mb-24">
    <div class="col-span-12 md:col-span-6 order-2 md:order-1 py-6 rounded-xl">
      <div>
        <div class="flex flex-col">
          <Icon name="tabler:clock" class="text-primary w-8 h-8 inline-block" />
          <h1 class="h2 my-4">
            For who is Security <span class="text-primary">Launchpad</span>
          </h1>
          <div class="p1">Lorem Ipsum</div>
        </div>
        {
          data.map(({ icon, title, paragraph }) => (
            <div class="flex w-full flex-col gap-y-3 mt-8">
              <div class="flex items-center gap-x-2">
                <Icon name={icon} class="text-primary w-8 h-8 inline-block" />
                <p class="p1 font-semibold" set:html={title} />
              </div>
              <p class="text-gray-400 p1" set:html={paragraph} />
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="bg-primary w-full p-24 h-full col-span-12 md:col-span-6 order-1 md:order-2"
    >
    </div>
  </div>

  <div class="w-full max-w-5xl mx-auto p-4 mb-24">
    <div class="p-8 rounded-md">
      <h1 class="h2 text-center mb-8">What do you get with this bundle?</h1>
      <div class="grid grid-cols-12 w-full gap-8">
        {
          after_list.map((text: string, idx: number) => (
            <div class="block col-span-2 md:col-span-5 w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
              <div class="flex justify-start mb-2">
                <div class="w-6 h-6 rounded-md flex justify-center items-center bg-primary text-white">
                  <div set:text={idx + 1} />
                </div>
              </div>
              <p class="p1 text-gray-700 dark:text-gray-400" set:text={text} />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div class="px-4 w-full max-w-5xl mx-auto mb-24">
    <h1 class="h2 mx-auto text-center my-8">Services you get</h1>
    <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-12">
      {
        services_list.map(({ title, body, href }) => (
          /*div class="info-primary px-4 py-8 h-60 rounded-md">
            <h1 set:text={title} class="h3 " />
            <p set:text={body} class="p1 py-8" />

            <div class="border-t  pt-2 border-primary">
              <a href={href} class="text-primary font-bold">
                Learn more
              </a>
            </div>
          </div>*/ <div class="px-4 py-8 h-60 rounded-md">
            <div class="rounded-b-md p-4 pb-8 flex flex-col gap-y-4 info-primary">
              <h1 class="h3 text-black" set:text={title} />
              <p class="p2 mb-4 -mt-2" set:text={body} />

              <div class="w-full">
                <a href={href} class="btn-primary btn-md">
                  View more
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="px-4 w-full max-w-5xl mx-auto mb-24">
    <h1 class="h2 mx-auto text-center my-8">Bonuses you get</h1>
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12">
      {
        bonus_list.map(({ title, body, href }) => (
          /*<div class="info-secondary px-4 py-8 h-60 rounded-md">
            <h1 set:text={title} class="h3 " />
