---
import Icon from "astro-icon";
import Layout from "../../../layouts/PageLayout.astro";
import { Picture } from "@astrojs/image/components";
import { Fragment } from "astro/dist/runtime/server";
const meta = {
  title: "Do you want amplified security? ",
  description:
    "Defining boundaries for a quality security assement is hard. We make it easy.",
  dontUseTitleTemplate: true,
};
const before_list = [
  `One security mistake can put your whole company at risk.`,
  `There's no process to find out where your security is the weakest.`,
  `You can't do business with big clients that demand you meet security compliances and regulations.`,
  `Without mandatory security rules, you are at risk of compliance & regulation fines.`,
];
const after_list = [
  `You'll have a secure code template for creating your next product.`,
  `Our insights will help you identify and fix security issues effectively.`,
  `After using this bundle, you'll be compliant, allowing you to work with high-paying clients.`,
  `Setting up these security rules will eliminate the chances of breaking compliences.`,
];

const services_list = [
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
  {
    title: "Web Application Penetration Testing",
    body: `We thoroughly assess your web application for potential security vulnerabilities.`,
    href: "/services/application-test",
  },
];
const bonus_list = [
  {
    title: `BIA (Business Impact Analysis):`,
    body: `Process that assesses and evaluates the potential effects of disruptions to your business operations.`,
    href: "/services/application-test",
  },
  {
    title: `BIA (Business Impact Analysis):`,
    body: `Process that assesses and evaluates the potential effects of disruptions to your business operations.`,
    href: "/services/application-test",
  },
];
---

<Layout {meta}>
  <section class="bg-white">
    <div
      class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 lg:py-16 lg:grid-cols-12"
    >
      <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
        <img
          src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png"
          alt="mockup"
        />
      </div>
      <div class="ml-auto place-self-center lg:col-span-7">
        <h1 class="max-w-2xl mb-4 h1">
          Security Launchpad <span class="text-primary">Bundle</span>
        </h1>
        <p class="max-w-2xl mb-6 p1">
          Our bundle takes you from where you are now to where you can proudly
          say your security is A-excellent.
        </p>
        <a
          href="/contact-form/launchpad"
          class="btn-md btn-primary py-2.5 w-full text-xs font-semibold shadow-none"
        >
          Take first step
        </a>
      </div>
    </div>
  </section>

  <div class="px-4 w-full max-w-5xl mx-auto mb-24">
    <h1 class="h2 mx-auto text-center my-4">
      What do you get with this service?
    </h1>
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12">
      <div class="bg-paper p-4 rounded-md">
        <div class="w-full"><p class="h3 text-center font-bold">Before</p></div>
        <div class="w-full">
          <ul role="list" class="space-y-5 my-7">
            {
              before_list.map((text: string) => (
                <li class="flex items-center ">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    fill="rgb(220, 38, 38)"
                    class="bi bi-x"
                    viewBox="0 0 16 16"
                  >
                    {" "}
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />{" "}
                  </svg>

                  <span
                    set:text={text}
                    class="font-normal leading-tight ms-3"
                  />
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="bg-paper p-4 rounded-md">
        <div class="w-full"><p class="h3 text-center font-bold">After</p></div>
        <div class="w-full">
          <ul role="list" class="space-y-5 my-7">
            {
              after_list.map((text: string) => (
                <li class="flex items-center">
                  <svg
                    class="flex-shrink-0 w-4 h-4 text-primary"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                  </svg>
                  <span
                    set:text={text}
                    class="font-normal leading-tight ms-3"
                  />
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="px-4 w-full max-w-5xl mx-auto mb-24">
    <h1 class="h2 mx-auto text-center my-8">Services you get</h1>
    <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-12">
      {
        services_list.map(({ title, body, href }) => (
          <div class="info-primary px-4 py-8 h-60 rounded-md">
            <h1 set:text={title} class="h3 " />
            <p set:text={body} class="p1 py-8" />

            <div class="border-t  pt-2 border-primary">
              <a href={href} class="text-primary font-bold">
                Learn more
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="px-4 w-full max-w-5xl mx-auto mb-24">
    <h1 class="h2 mx-auto text-center my-8">Bonuses you get</h1>
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-12">
      {
        bonus_list.map(({ title, body, href }) => (
          <div class="info-secondary px-4 py-8 h-60 rounded-md">
            <h1 set:text={title} class="h3 " />
            <p set:text={body} class="p1 py-8" />

            <div class="border-t  pt-2 border-secondary">
              <a href={href} class="text-secondary font-bold">
                Learn more
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="w-full max-w-5xl p-4 mx-auto mb-24">
    <div
      class="bg-primary w-full rounded-md shadow-xl overflow-hidden md:grid md:grid-cols-2 md:gap-4 lg:grid lg:grid-cols-2 lg:gap-4"
    >
      <div
        class="flex flex-col mb-4 text-white items-start pt-10 pb-12 px-6 sm:pt-16 sm:px-16 md:py-20 md:pr-0 lg:py-20 lg:pr-0 xl:px-20"
      >
        <h1 class="mb-4 h2 font-bold">
          <span class="block"
            >Neglected security before and not sure where to begin?</span
          >
        </h1>
        <p class="text-sm md:text-base">
          We help founders, just like you prioritize key issues first. After our
          service, you'll have a security roadmap.
        </p>
        <div class="flex justify-cetner mt-8 gap-x-4 items-center">
          <a href="/contact-form/launchpad" class="btn-white btn-sm"
            >Take first step</a
          >
        </div>
      </div>
      <div class="w-full relative">
        <Picture
          style="box-shadow: 14px 8px 30px 0px #ffff;"
          class="translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 ltablet:translate-y-20 lg:translate-y-20"
          src="/images/android_blog.png"
          width={800}
          height={800}
          widths={[400, 768]}
          sizes="100vw, 432px"
          aspectRatio="300:300"
          alt="sa"
        />
      </div>
    </div>
  </div>
</Layout>
