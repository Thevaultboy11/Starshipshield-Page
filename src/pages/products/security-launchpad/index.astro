const after_list = [
  `You'll have a secure code template for creating your next product.`,
  `Our insights will help you identify and fix security issues effectively.`,
  `After using this bundle, you'll be compliant, allowing you to work with high-paying clients.`,
  `Setting up these security rules will eliminate the chances of breaking compliences.`,
];

const services_list = [
  {
    title: "Web Application Penetration Testing",
